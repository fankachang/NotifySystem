    document.getElementById('typeModal').classList.remove('hidden');
}

function openEditModal(type) {
    document.getElementById('modalTitle').textContent = 'ç·¨è¼¯è¨Šæ¯é¡å‹';
    document.getElementById('typeId').value = type.id;
    document.getElementById('typeCode').value = type.code;
    document.getElementById('typeName').value = type.name;
    document.getElementById('typeDescription').value = type.description || '';
    document.getElementById('typePriority').value = type.priority;
    document.getElementById('typeColor').value = type.color || '#808080';
    document.getElementById('typeIcon').value = type.icon || '';
    document.getElementById('typeIsActive').checked = type.isActive;
    document.getElementById('typeModal').classList.remove('hidden');
}

function closeModal() {
    document.getElementById('typeModal').classList.add('hidden');
}

async function handleSubmit(e) {
    e.preventDefault();
    
    const typeId = document.getElementById('typeId').value;
    const isEdit = !!typeId;
    
    const data = {
        code: document.getElementById('typeCode').value,
        name: document.getElementById('typeName').value,
        description: document.getElementById('typeDescription').value || null,
        priority: parseInt(document.getElementById('typePriority').value),
        color: document.getElementById('typeColor').value,
        icon: document.getElementById('typeIcon').value || null,
        isActive: document.getElementById('typeIsActive').checked
    };
    
    try {
        const url = isEdit ? `/api/v1/admin/message-types/${typeId}` : '/api/v1/admin/message-types';
        const method = isEdit ? 'PUT' : 'POST';
        
        const result = await adminFetch(url, {
            method: method,
            body: JSON.stringify(data)
        });
        
        if (result.success) {
            closeModal();
            loadMessageTypes();
        } else {
            alert(result.error?.message || 'æ“ä½œå¤±æ•—');
        }
    } catch (error) {
        console.error('Error:', error);
